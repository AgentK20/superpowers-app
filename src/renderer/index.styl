@import "styles/reset";
@import "styles/treeView";
@import "styles/resizeHandle";
@import "styles/tabStrip";
@import "styles/dialogs";

body { display: flex; }

.loading {
  position: absolute;
  z-index: 100;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  
  background: #444;
  color: #fff;

  display: flex;
  align-items: center;
  justify-content: center;
}

body > .sidebar {
  min-width: 240px;
  max-width: 480px;
  width: 240px;
  display: flex;
  flex-flow: column;
  background: #f0f0f0;
  color: #444;

  display: flex;
  flex-flow: column;
}

body > .sidebar .servers-tree-view {
  flex: 1 1 0;
  position: relative;

  > .tree { position: absolute; }

  li {
    display: block;
    height: auto;
    padding: 0.5em 1em;
    
    .label, .host {
      white-space: nowrap;
      overflow-x: hidden;
      text-overflow: ellipsis;
    }
    
    .label { font-size: 1.5em; }
  }
}

.servers-buttons {
  .add-server { background-image: url(images/servers/add.svg); }
  .edit-server { background-image: url(images/servers/edit.svg); }
  .remove-server { background-image: url(images/servers/remove.svg); }
}

.main {
  flex: 1 1 0;
  display: flex;
  flex-flow: column;

  .tabs-bar {
    background: #eee;
    border-bottom: 1px solid #aaa;
  }

  .panes {
    flex: 1 1 0;
    display: flex;
  }
}
  
.main .panes .home {
  @import "styles/home.styl";
}

.main .panes > * {
  flex: 1 1 0;
  border: 0;
}

.main .panes > *:not(.active) {
  display: none;
}
